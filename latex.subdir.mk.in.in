#
# This Makefile fragment is included at the very end of users custom
# Makefiles in subdirectories of a top level latex-mk Makefile.  This
# makes sure the standard set of targets exist so a recursive make
# will not fail due to undefined targets
#

.if !target(all)
all:: view
.endif

.if !target(view)
.PHONY: view
view:
.endif

.if !target(viewps)
.PHONY: viewps
viewps:
.endif

.if !target(print)
.PHONY:  print
print:
.endif

.if !target(dvi)
.PHONY: dvi
dvi:
.endif

.if !target(ps)
.PHONY:  ps
ps:
.endif

.if !target(pdf)
.PHONY:  pdf
pdf:
.endif

.if !target(clean)
.PHONY: clean
clean::
.endif

.if !target(distclean)
.PHONY: distclean
distclean: clean
.endif

.if !target(show-var)
.PHONY: show-var
show-var:
	@${ECHO} ${${VARNAME}}
.endif

