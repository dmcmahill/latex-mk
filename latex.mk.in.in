ECHO?=		@ECHO@
ENV_PROG?=	@ENV_PROG@
FALSE?=		@FALSE@
FIND?=		@FIND@
GREP?=		@GREP@
GV?=		@GV@
GV_FLAGS?=
HACHA?=		@HACHA@
HACHA_ENV?=
HACHA_FLAGS?=
