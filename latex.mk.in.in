DRAFT_STAMP_PS?=	draft_stamp.ps
DATED_DRAFT_PS?=	${LATEX_MK_DIR}/dated_draft.ps

BMK:.if !target(default)
.PHONY: default
default: all
BMK:.endif

BMK:.if !target(all)
