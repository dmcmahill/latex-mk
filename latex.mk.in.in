LATEX_MK_DIR?=	@pkgdatadir@

AWK?=		@AWK@
BIBTEX?=	@BIBTEX@
DVIPDFM?=	@DVIPDFM@
DVIPDFM_FLAGS+=	
DVIPS?=		@DVIPS@
