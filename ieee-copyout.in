for f in `awk 'BEGIN{FS="[{}]+";} /^\\includegraphics/ {print $2;}' ${NAME}.tex`
do

    nf=fig${i}.eps
    echo "Renaming $f to $nf"
    echo "s;{$f};{$nf};g" >> $SED_FILE
    cp $f $ndir/$nf

