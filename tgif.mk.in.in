#######################################
#
# README:
#
# To use this makefile fragment, set the variable:
#	TGIFSRCS	= the tgif drawing files (.obj files)
# in your top level Makefile.  You can also specify
# TGIFDIRS which is a list of directories containing
# tgif files.  All tgif files in the specified directories
# are added to TGIFSRCS
#
# The following variables may be overridden in your top level Makefile
#
#  TGIF		= the tgif executable
#  TGIF_FLAGS	= flags passed to tgif for exporting to eps
#
#######################################


# how to call tgif to convert tgif files to postscript
TGIF?=		@TGIF@
TGIF_FLAGS?=	-color -print -eps

# directory to look for tgif files in
BMK:.if defined(TGIFDIRS)
BMK:.for __tmp__ in ${TGIFDIRS}
BMK:.if exists(${__tmp__})
BMK:_TGIF_ADD!=	ls ${__tmp__}/*.obj
BMK:TGIFSRCS+=	${_TGIF_ADD}
BMK:.endif
BMK:.endfor
BMK:.endif

GMK:ifdef TGIFDIRS
GMK:TGIFSRCS+= $(foreach __tmp__,$(TGIFDIRS),$(wildcard $(__tmp__)/*.obj))
GMK:endif

BMK:.for __name__ in ${NAME}
BMK:.if defined(${__name__}_TGIFDIRS)
BMK:.for __tmp__ in ${${__name__}_TGIFDIRS}
BMK:.if exists(${__tmp__})
BMK:_TGIF_ADD!=	ls ${__tmp__}/*.obj
BMK:${__name__}_TGIFSRCS+=	${_TGIF_ADD}
BMK:.endif
BMK:.endfor
BMK:.endif
BMK:.endfor

TGIFOBJS?=	$(TGIFSRCS:.obj=.eps)
ALLTGIFOBJS=	$(TGIFOBJS)
BMK:.for __tmp__ in ${NAME}
BMK:.if defined(${__tmp__}_TGIFSRCS)
BMK:${__tmp__}_TGIFOBJS?=	${${__tmp__}_TGIFSRCS:.obj=.eps}
BMK:${__tmp__}_OTHER+=	${${__tmp__}_TGIFOBJS}
BMK:ALLTGIFOBJS+=	${${__tmp__}_TGIFOBJS}
BMK:.endif
BMK:.endfor

LATEX_MK_TGIFDEPS=	latex-mk-tgifdeps.mk
GMK:# here is where we wish that .for loops were commonly
GMK:# supported in GNU make...
GMK:# XXX -- we need to not assume its called 'Makefile'.  What if
GMK:#        someone uses gmake -f foo.mk !!!  Stupid GNU make.
GMK:${LATEX_MK_TGIFDEPS}: Makefile
GMK:	@${RM} -f $@
GMK:	@echo "#############################################" >> $@
GMK:	@echo "### Generated file.  Do not edit directly ###" >> $@
GMK:	@echo "#############################################" >> $@
GMK:	@for tmp in ${NAME} ; do \
GMK:		echo "# Tgif directory dependencies for \"$${tmp}\"" >> $@ ; \
GMK:		echo "ifdef $${tmp}_TGIFDIRS" >> $@ ; \
GMK:		echo "$${tmp}_TGIFSRCS+= \$$(foreach __tmp__,\$$($${tmp}_TGIFDIRS),\$$(wildcard $$(__tmp__)/*.obj))" >> $@ ; \
GMK:		echo "endif" >> $@ ; \
GMK:		echo " " >> $@ ; \
GMK:		echo "ifdef $${tmp}_TGIFSRCS" >> $@ ; \
GMK:		echo "$${tmp}_TGIFOBJS+= \$${$${tmp}_TGIFSRCS:.obj=.eps}" >> $@ ; \
GMK:		echo "$${tmp}_OTHER+=	\$${$${tmp}_TGIFOBJS}" >> $@ ; \
GMK:		echo "ALLTGIFOBJS+= \$${$${tmp}_TGIFOBJS}"  >> $@ ; \
GMK:		echo "endif" >> $@ ; \
GMK:		echo " " >> $@ ; \
GMK:	done
GMK:include ${LATEX_MK_TGIFDEPS}


BMK:.ifdef TGIFSRCS
GMK:ifdef TGIFSRCS
OTHER+=	$(TGIFOBJS)
all::		$(ALLTGIFOBJS)

clean::
	$(RM) -f $(ALLTGIFOBJS) $(LATEX_MK_TGIFDEPS)

BMK:.endif
GMK:endif


.SUFFIXES : .obj .eps

.obj.eps : 
	$(TGIF) $(TGIF_FLAGS) $*.obj

